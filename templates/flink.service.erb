[Unit]
Description=<%= scope['flink::service_name'] %>
After=network.target

[Service]
Type=forking
WorkingDirectory=<%= scope['flink::install_dir'] %>/bin
ExecStart=<%= scope['flink::install_dir'] %>/bin/start-local.sh > /dev/null 2>&1
ExecStop=<%= scope['flink::install_dir'] %>/bin/stop-local.sh > /dev/null 2>&1
PIDFile=/tmp/flink--jobmanager.pid

[Install]
WantedBy=multi-user.target