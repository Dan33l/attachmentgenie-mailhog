#!/usr/bin/env sh
# /etc/init.d/mailhog
#
# chkconfig:   2 3 4 5 90 60
# description: Enable MailHog.

### BEGIN INIT INFO
# Provides:          mailhog
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Should-Start:
# Should-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start MailHog at boot time.
# Description:       Enable MailHog.
### END INIT INFO

PID=/var/run/mailhog.pid
USER=nobody
BIN="<%= scope['mailhog::install_dir'] %>/mailhog"
NAME="<%= scope['mailhog::service_name'] %>"

[ -e <%= scope['mailhog::config_file'] %> ] && . <%= scope['mailhog::config_file'] %>

# Carry out specific functions when asked to by the system

start() {
  echo -n $"Starting $NAME: "
  start-stop-daemon --start --pidfile $PID --make-pidfile --user $USER --background --exec $BIN -- $MAILHOG_OPTS
}

stop() {
  if [ -f $PID ]; then
    echo -n $"Stopping $NAME: "
    start-stop-daemon --stop --pidfile $PID
    rm -f $PID
  else
    echo -n $"$NAME is not running."
  fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
  status)
    if [ -f $PID ]; then
      echo -n $"$NAME is running."
    else
      echo -n $"$NAME is not running."
      exit 3
    fi
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart}"
    exit 2
    ;;
esac

exit $?